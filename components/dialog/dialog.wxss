/* components/dialog/dialog.wxss */

.dialog-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.dialog-p {
  position: fixed;
  z-index: 5000;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 10px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dialog-title {
  font-size: 34rpx;
  color: #222;
  margin-top: 40rpx;
}

.dialog-content {
  width: 330rpx;
  margin-top: 32rpx;
  color: #aaa;
  font-size: 30rpx;
}

.dialog-line {
  width: 100%;
  height: 2rpx;
  background: #eee;
  margin-top: 30rpx;
}

.dialog-bt-p {
  width: 100%;
  height: 86rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.dialog-bt-cancel {
  width: 249rpx;
  height: 100%;
  text-align: center;
  line-height: 86rpx;
  font-size: 30rpx;
  color: #222;
  background: #fff;
}

.dialog-bt-line {
  width: 2rpx;
  height: 100%;
  background: #eee;
}

.dialog-bt-confirm {
  width: 250rpx;
  height: 100%;
  text-align: center;
  line-height: 86rpx;
  font-size: 30rpx;
  color: #4ec282;
  background: #fff;
}
